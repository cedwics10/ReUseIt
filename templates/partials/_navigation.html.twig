<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('forum.index') }}">SymForum</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                {% set current_route = app.request.get('_route') %}

                <li class="nav-item">
                    <a class="nav-link{{ current_route|split('.', 2)|first in ['forum', 'category', 'thread'] ? ' active' }}" href="{{ path('forum.index') }}">{% trans %}Forums{% endtrans %}</a>
                </li>

                {{ include('partials/_nav_item.html.twig', {route: 'page.members', text: 'Members list'|trans}) }}

                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link{{ app.request.get('_route') == 'user.profile' and app.user.pseudo in app.request.get('_route_params') ? ' active' }}" href="{{ path('user.profile', {'slug': app.user.slug}) }}">{% trans %}My profile{% endtrans %}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{{ app.request.get('_route') == 'user.settings' ? ' active' }}" href="{{ path('user.settings') }}">{% trans %}Settings{% endtrans %}</a>
                    </li>
                    {% if is_granted('ROLE_MODERATOR') %}
                        <li class="nav-item">
                            <a class="nav-link{{ current_route starts with 'admin' ? ' active' }}" href="{{ path('admin.homepage') }}">{% trans %}Admin{% endtrans %}</a>
                        </li>
                    {% endif %}
                    {{ include('partials/_nav_item.html.twig', {route: 'security.logout', text: 'Logout'|trans}) }}
                {% else %}
                    {{ include('partials/_nav_item.html.twig', {route: 'security.login', text: 'Login'|trans}) }}
                {% endif %}
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('user.locale') }}">{{ app.request.locale == 'en' ? 'FR' : 'EN' }}</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
