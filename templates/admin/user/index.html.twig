{% extends 'layouts/full-width.html.twig' %}

{% block title %}{% trans %}Users{% endtrans %}{% endblock %}

{% block content %}
    {% do append_breadcrumb('Admin'|trans, path('admin.homepage')) %}
    {% do append_breadcrumb('Users'|trans) %}

    {{ include('partials/_breadcrumb.html.twig') }}

    <h1>{% trans %}Users{% endtrans %} ({{ pagination.getTotalItemCount }})</h1>

    <div class="mt-3">
        <table class="table table-sm">
            <thead>
            <tr>
                <th>{% trans %}Registered on{% endtrans %}</th>
                <th>{% trans %}Pseudo{% endtrans %}</th>
                <th>{% trans %}Email{% endtrans %}</th>
                <th>{% trans %}Last activity{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination %}
                <tr>
                    <td>{{ user.createdAt|format_datetime('short') }}</td>
                    <td>{{ user_profile_link(user) }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.lastActivityAt ? user.lastActivityAt|format_datetime('short') : 'Jamais' }}</td>
                    <td><a href="{{ path('admin.user.details', {'slug': user.slug}) }}">DÃ©tails</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
