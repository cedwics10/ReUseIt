{% extends 'layouts/full-width.html.twig' %}

{% block title %}{% trans %}Categories{% endtrans %}{% endblock %}

{% block content %}
    {% do append_breadcrumb('Admin'|trans, path('admin.homepage')) %}
    {% do append_breadcrumb('Categories'|trans) %}

    {{ include('partials/_breadcrumb.html.twig') }}

    <h1>
        <span>{% trans %}Categories{% endtrans %}</span>
        <a class="btn btn-primary btn-sm" href="{{ path('admin.category.add') }}" title="{% trans %}Add{% endtrans %}">
            <i class="fas fa-plus"></i>
        </a>
    </h1>

    <div id="messages"></div>

    <div class="mt-3">
        <table class="table table-sm">
            <thead>
            <tr class="d-flex">
                <th class="col-2">{% trans %}Position{% endtrans %}</th>
                <th class="col-8">{% trans %}Title{% endtrans %}</th>
                <th class="col-2">{% trans %}Actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody class="thead-light">
            {% for category in categories %}
                <tr class="d-flex">
                    <td class="col-2">{{ category.position }}</td>
                    <td class="col-8">{{ category.title }}</td>
                    <td class="col-2">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.category.edit', {'uuid': category.uuidBase32}) }}" title="{% trans %}Edit{% endtrans %}">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button class="btn btn-danger btn-sm js-delete-button" data-delete-url="{{ path('admin.category.delete', {'uuid': category.uuidBase32}) }}" title="{% trans %}Delete{% endtrans %}">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
